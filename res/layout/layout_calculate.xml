            android:text="/"/>
    </TableRow>
    <TableRow android:gravity="center_horizontal">
        <Button style="@style/calculate_btn_style"
            android:id="@+id/btn_calculate_4"
            android:text="4"/>
        <Button style="@style/calculate_btn_style"
            android:id="@+id/btn_calculate_5"
