        <Button style="@style/calculate_btn_style"
            android:id="@+id/btn_calculate_0"
            android:text="0"/>
        <Button style="@style/calculate_btn_style"
            android:id="@+id/btn_calculate_cancel"
            android:text="C"/>
        <Button style="@style/calculate_btn_style"
            android:id="@+id/btn_calculate_equal"
            android:text="="/>
